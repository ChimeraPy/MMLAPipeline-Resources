{
    "mode": "record",
    "name": "gaze-camera-screen",
    "description": "A pipeline that uses a camera and a gaze estimator to show the gaze on the camera feed",
    "workers": {
        "manager_ip": "10.66.191.251",
        "manager_port": 9001,
        "instances": [
            {
                "name": "local",
                "id": "local",
                "description": "local worker for the MMLA pipeline demo"
            },
            {
                "name": "linux",
                "id": "linux",
                "remote": true,
                "description": "linux worker for the MMLA pipeline demo"
            }
        ]
    },
    "nodes": [
        {
            "registry_name": "MMLAPIPE_Video",
            "name": "camera",
            "kwargs": {
                "video_src": 0,
                "width": 720,
                "frame_key": "frame",
                "include_meta": true,
                "download_video": false
            },
            "package": "mmlapipe"
        },
        {
            "registry_name": "MMLAPIPE_ScreenCapture",
            "name": "screen",
            "kwargs": {
                "scale": 0.5
            },
            "package": "mmlapipe"
        },
        {
            "registry_name": "MMLAPIPE_GazeL2CSNet",
            "name": "gaze-l2cs-net",
            "kwargs": {
                "weights": "https://vanderbilt.box.com/shared/static/3n5m0upd9n87x7lkrusbe0rh5hkvsgp2.pkl",
                "device": "cuda",
                "frames_key": "frame",
                "show": false
            },
            "package": "mmlapipe"
        },
        {
            "registry_name": "MMLAPIPE_ShowWindows",
            "name": "show",
            "kwargs": {
                "frames_key": "frame"
            },
            "package": "mmlapipe"
        }
    ],
    "adj": [
        [
            "camera",
            "gaze-l2cs-net"
        ],
        [
            "gaze-l2cs-net",
            "show"
        ],
        [
            "screen",
            "show"
        ]
    ],
    "manager_config": {
        "logdir": "cp-logs",
        "port": 9001
    },
    "mappings": {
        "local": [
            "gaze-l2cs-net",
            "show"
        ],
        "linux": [
            "camera",
            "screen"
        ]
    },
    "timeouts": {
        "commit_timeout": 120,
        "shutdown_timeout": 300
    }
}